<?page title="ATS - Monte dei Paschi di Siena" contentType="text/html;charset=UTF-8"?>
<zk xmlns="http://www.zkoss.org/2005/zul">
	<window width="100%" height="100%"
		viewModel="@id('vm') @init('com.nttdata.viewmodel.AtsViewModel')"
		apply="org.zkoss.bind.BindComposer">

		<style src="/css/home.css" />
		<script src="/js/home.js" />

		<!-- ðŸ” Barra superiore -->
		<div sclass="navbar">
			<hbox>
				<image id="logoImg" src="/images/logo.png" height="45px"
					style="margin-right:10px;" />
			</hbox>
			<hbox sclass="menu">
				<a href="home.zul">Home</a>
				<a href="#">Servizi</a>
				<a href="#">Contatti</a>
			</hbox>
		</div>

		<!-- ðŸ§­ Layout principale -->
		<div sclass="main-layout">

			<!-- ðŸ“ Sidebar -->
			<div sclass="sidebar">
				<button label="Profili"
					onClick='Executions.sendRedirect("profili.zul")' style="background-color:#6c757d; color:white;" />
				<button label="Aggregati"
					onClick='Executions.sendRedirect("aggregati.zul")' style="background-color:#6c757d; color:white;" />
				<button label="APM"
					onClick='Executions.sendRedirect("apm.zul")' style="background-color:#6c757d; color:white;" />
				<button label="Target"
					onClick='Executions.sendRedirect("aggregati.zul")'
					style="width:100%; margin-bottom:12px;background-color:#6c757d; color:white; border:none; padding:10px; border-radius:6px; cursor:pointer;" />
				<button label="Azienda"
					onClick='Executions.sendRedirect("aggregati.zul")'
					style="width:100%; margin-bottom:12px;background-color:#6c757d; color:white; border:none; padding:10px; border-radius:6px; cursor:pointer;" />
				<button label="ATS"
					onClick='Executions.sendRedirect("ats.zul")'
					style="background-color:#7b002c; color:white;" />
			</div>

			<!-- ðŸ“‹ Contenuto principale -->
			<div sclass="content-area">

				<label value="@load(vm.messaggio)"
					style="font-size:16px; color:#333; margin-bottom:15px;" />

				<!-- ðŸ” Barra di ricerca -->
				<hbox style="margin-bottom:10px;" align="center">
					<label value="Cerca in:"
						style="margin-right:5px; font-weight:500;" />
					<combobox value="@bind(vm.searchColumn)"
						width="150px" readonly="true" style="margin-right:10px;">
						<comboitem label="Tutti" value="Tutti" />
						<comboitem label="ID_ATS" value="ID_ATS" />
						<comboitem label="ATS_NOME" value="ATS_NOME" />
						<comboitem label="ID_SESSION" value="ID_SESSION" />
					</combobox>

					<textbox placeholder="Inserisci testo da cercare..."
						width="300px" value="@bind(vm.searchText)"
						style="margin-right:10px;" />

					<button label="Cerca"
						onClick="@command('filterAts')"
						style="background-color:#7b002c; color:white;
                               border:none; padding:5px 15px; border-radius:4px; font-weight:500;" />
					<button label="Pulisci"
						onClick="@command('clearSearch')"
						style="margin-left:10px; background-color:#6c757d; color:white;
                               border:none; padding:5px 15px; border-radius:4px; font-weight:500;" />
				</hbox>

				<!-- ðŸ§¾ Contenitore tabella -->
				<div sclass="table-container">

					<div sclass="table-header">
						<hbox align="center" pack="stretch"
							width="100%">
							<label value="Elenco ATS"
								style="font-weight:bold; font-size:14px;" />

							<!-- Selettore righe per pagina -->
							<hbox align="center" spacing="5px">
								<label value="Righe per pagina:"
									style="font-size:12px;" />
								<button label="10"
									onClick="@command('changePageSize', size=10)"
									disabled="@load(vm.pageSize eq 10)" sclass="page-size-btn" />
								<button label="50"
									onClick="@command('changePageSize', size=50)"
									disabled="@load(vm.pageSize eq 50)" sclass="page-size-btn" />
								<button label="100"
									onClick="@command('changePageSize', size=100)"
									disabled="@load(vm.pageSize eq 100)" sclass="page-size-btn" />
							</hbox>
						</hbox>
					</div>

					<!-- ðŸ”„ Controlli paginazione (sopra) -->
					<div
						style="padding:10px; background:#f8f9fa; border-bottom:1px solid #ddd;">
						<hbox align="center" pack="justify"
							width="100%">
							<label value="@load(vm.recordInfo)"
								style="font-size:12px; color:#666;" />
							<hbox spacing="5px">
								<button label="Â«"
									onClick="@command('firstPage')" disabled="@load(vm.firstPage)"
									sclass="pagination-btn" tooltiptext="Prima pagina" />
								<button label="â€¹"
									onClick="@command('previousPage')"
									disabled="@load(vm.firstPage)" sclass="pagination-btn"
									tooltiptext="Pagina precedente" />
								<label value="@load(vm.pageInfo)"
									style="font-size:12px; padding:0 10px; line-height:30px;" />
								<button label="â€º"
									onClick="@command('nextPage')" disabled="@load(vm.lastPage)"
									sclass="pagination-btn" tooltiptext="Pagina successiva" />
								<button label="Â»"
									onClick="@command('lastPage')" disabled="@load(vm.lastPage)"
									sclass="pagination-btn" tooltiptext="Ultima pagina" />
							</hbox>
						</hbox>
					</div>

					<!-- ðŸ“Š Tabella ATS -->
					<div id="tableScrollWrapper"
						sclass="table-scroll-wrapper"
						style="max-height:550px; overflow-y:auto;">

						<grid id="gridAts" model="@bind(vm.filteredAts)"
							emptyMessage="Nessun record trovato"
							selection="@bind(vm.selectedAts)" sclass="wide-grid"
							width="100%">

							<columns sizable="false">
								<column label="ID_ATS" width="15%"
									style="background-color:#7b002c; color:white;" />
								<column label="ATS_NOME" width="35%"
									style="background-color:#7b002c; color:white;" />
								<column label="CREATION_DATE" width="20%"
									style="background-color:#7b002c; color:white;" />
								<column label="UPDATE_DATE" width="20%"
									style="background-color:#7b002c; color:white;" />
								<column label="ID_SESSION" width="15%"
									style="background-color:#7b002c; color:white;" />
								<column label="Azioni" width="10%"
									style="background-color:#7b002c; color:white;" />
							</columns>

							<template name="model">
								<row
									onClick="@command('openDetails', idAts=each.idAts)"
									style="cursor:pointer;"
									tooltiptext="Clicca per vedere i dettagli">
									<label value="@load(each.idAts)" />
									<label value="@load(each.atsNome)" />
									<label value="@load(each.creationDate)" />
									<label value="@load(each.updateDate)" />
									<label value="@load(each.idSession)" />

									<hbox spacing="10px" align="center"
										onClick="event.stopPropagation();">
										<!-- Icona Modifica -->
										<image src="/images/edit-4.png"
											height="24px"
											onClick="@command('openEdit', idAts=each.idAts)"
											style="cursor:pointer;" tooltiptext="Modifica ATS" />

										<!-- Icona Elimina -->
										<image src="/images/trash2.png"
											height="24px"
											onClick="@command('deleteAts', param=each)"
											style="cursor:pointer;" tooltiptext="Elimina ATS" />
									</hbox>
								</row>
							</template>

						</grid>
					</div>

					<!-- ðŸ”„ Controlli paginazione (sotto) -->
					<div
						style="padding:10px; background:#f8f9fa; border-top:1px solid #ddd;">
						<hbox align="center" pack="center" width="100%"
							spacing="5px">
							<button label="Â«"
								onClick="@command('firstPage')" disabled="@load(vm.firstPage)"
								sclass="pagination-btn" />
							<button label="â€¹"
								onClick="@command('previousPage')"
								disabled="@load(vm.firstPage)" sclass="pagination-btn" />
							<label value="@load(vm.pageInfo)"
								style="font-size:12px; padding:0 15px; line-height:30px; font-weight:bold;" />
							<button label="â€º"
								onClick="@command('nextPage')" disabled="@load(vm.lastPage)"
								sclass="pagination-btn" />
							<button label="Â»"
								onClick="@command('lastPage')" disabled="@load(vm.lastPage)"
								sclass="pagination-btn" />
						</hbox>
					</div>

				</div>
			</div>
		</div>
	</window>
</zk>
